@using Application.DTOs.MovieDTOs
@model List<MovieDto>

@{
    ViewData["Title"] = "Film Kataloğu";
    var query = ViewBag.Query as string ?? "";
}

<div class="container fd-catalog-wrap">

    @if (TempData["Success"] != null)
    {
        <div class="alert fd-alert fd-alert-success alert-dismissible fade show mt-3 fd-alert-top" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert fd-alert fd-alert-danger alert-dismissible fade show mt-3 fd-alert-top" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="fd-catalog-title">Film Kataloğu</div>

    <form method="get" class="fd-filterbar">
        <div class="row g-3 align-items-end">
            <div class="col-12 col-lg-4">
                <label>Kategori</label>
                <select name="categoryId" class="form-select" asp-items="ViewBag.Categories"></select>
            </div>

            <div class="col-12 col-lg-6">
                <label>Arama</label>
                <input name="q" value="@query" class="form-control" placeholder="Film adı..." />
            </div>

            <div class="col-12 col-lg-2 d-grid">
                <button class="btn btn-primary" type="submit">Filtrele</button>
            </div>
        </div>
    </form>

    @if (Model == null || Model.Count == 0)
    {
        <div class="fd-empty2">Film bulunamadı.</div>
    }
    else
    {
        <div class="fd-grid">
            @foreach (var m in Model)
            {
                <div>
                    @await Html.PartialAsync("~/Views/Shared/_ProductCard.cshtml", m)
                </div>
            }
        </div>
    }
</div>
