@using Application.DTOs.MovieDTOs
@model List<MovieDto>

@{
    ViewData["Title"] = "Film Kataloğu";

    var query = ViewBag.Query as string ?? "";
    var selectedCategoryId = ViewBag.SelectedCategoryId as int?;
    var showcase = ViewBag.Showcase as string ?? "";

    string BtnClass(string key)
    {
        if (string.IsNullOrWhiteSpace(showcase) && key == "")
            return "btn btn-danger btn-sm";

        return showcase == key
            ? "btn btn-danger btn-sm"
            : "btn btn-outline-light btn-sm";
    }
}

<div class="container fd-catalog-wrap">

    <div class="fd-catalog-title">Film Kataloğu</div>

    <div class="d-flex flex-wrap gap-2 mb-3">
        <a class="@BtnClass("")"
           asp-controller="Product"
           asp-action="Index"
           asp-route-categoryId="@selectedCategoryId"
           asp-route-q="@query">
            Hepsi
        </a>

        <a class="@BtnClass("award")"
           asp-controller="Product"
           asp-action="Index"
           asp-route-showcase="award"
           asp-route-categoryId="@selectedCategoryId"
           asp-route-q="@query">
            Ödüllü Filmler
        </a>

        <a class="@BtnClass("top")"
           asp-controller="Product"
           asp-action="Index"
           asp-route-showcase="top"
           asp-route-categoryId="@selectedCategoryId"
           asp-route-q="@query">
            FilmDükkani Top
        </a>

        <a class="@BtnClass("editors")"
           asp-controller="Product"
           asp-action="Index"
           asp-route-showcase="editors"
           asp-route-categoryId="@selectedCategoryId"
           asp-route-q="@query">
            Editör Seçimi
        </a>

        <a class="@BtnClass("new")"
           asp-controller="Product"
           asp-action="Index"
           asp-route-showcase="new"
           asp-route-categoryId="@selectedCategoryId"
           asp-route-q="@query">
            Yeni Çıkanlar
        </a>
    </div>

    <form method="get" class="fd-filterbar">
        <input type="hidden" name="showcase" value="@showcase" />

        <div class="row g-3 align-items-end">
            <div class="col-12 col-lg-4">
                <label>Kategori</label>
                <select name="categoryId" class="form-select" asp-items="ViewBag.Categories">
                    <option value="">Hepsi</option>
                </select>
            </div>

            <div class="col-12 col-lg-6">
                <label>Arama</label>
                <input name="q" value="@query" class="form-control" placeholder="Film adı, oyuncu, yönetmen..." />
            </div>

            <div class="col-12 col-lg-2 d-grid">
                <button class="btn btn-primary" type="submit">Filtrele</button>
            </div>
        </div>
    </form>

    @if (Model == null || Model.Count == 0)
    {
        <div class="fd-empty2">Film bulunamadı.</div>
    }
    else
    {
        <div class="fd-grid">
            @foreach (var m in Model)
            {
                <div>
                    @await Html.PartialAsync("~/Views/Shared/_ProductCard.cshtml", m)
                </div>
            }
        </div>
    }
</div>
