@using Application.DTOs.MovieDTOs
@using Application.DTOs.ReviewDTOs
@using Microsoft.AspNetCore.Mvc.Rendering
@using MVC.Constants
@model MovieDetailDto

@{
    ViewData["Title"] = "Film Detay";

    var cover = !string.IsNullOrWhiteSpace(Model.CoverImageUrl)
        ? Model.CoverImageUrl
        : $"https://picsum.photos/1200/700?random={Model.Id}";

    var token = Context.Session.GetString(SessionKeys.JwtToken);
    var memberId = Context.Session.GetInt32(SessionKeys.MemberId);
    var loggedIn = !string.IsNullOrWhiteSpace(token) && memberId.HasValue;

    var memberLists = ViewBag.MemberLists as List<SelectListItem> ?? new List<SelectListItem>();
    var hasLists = memberLists.Any();

    var reviews = ViewBag.Reviews as List<ReviewDto> ?? new List<ReviewDto>();

    var returnUrl = $"{Context.Request.Path}{Context.Request.QueryString}";
}

<div class="container py-4">

    <div class="row g-4 align-items-start">

        <div class="col-12 col-lg-6">
            <div class="fd-detail-poster fd-detail-poster--cinema">
                <div class="fd-detail-bg" style="background-image:url('@cover')"></div>
                <img src="@cover" alt="@Model.Title" loading="lazy" />
            </div>
        </div>

        <div class="col-12 col-lg-6">

            <h2 class="fd-detail-title">@Model.Title</h2>

            <div class="fd-detail-meta">
                <span class="badge bg-danger">@Model.ReleaseYear</span>

                @if (Model.CategoryNames != null && Model.CategoryNames.Count > 0)
                {
                    <span class="badge bg-dark border">@Model.CategoryNames.First()</span>
                }

                <span class="badge bg-dark border">
                    Puan: @(Model.ReviewCount == 0 ? "0" : Model.AverageRating.ToString("0.0")) (@Model.ReviewCount)
                </span>
            </div>

            @if (!string.IsNullOrWhiteSpace(Model.Description))
            {
                <p class="fd-detail-desc mt-3">
                    @Model.Description
                </p>
            }

            <div class="fd-detail-specs mt-3">
                <div class="fd-spec">
                    <div class="fd-spec-label">Altyazı</div>
                    <div class="fd-spec-val">@(!string.IsNullOrWhiteSpace(Model.SubtitleLanguages) ? Model.SubtitleLanguages : "-")</div>
                </div>

                <div class="fd-spec">
                    <div class="fd-spec-label">Ses</div>
                    <div class="fd-spec-val">@(!string.IsNullOrWhiteSpace(Model.AudioFeatures) ? Model.AudioFeatures : "-")</div>
                </div>

                <div class="fd-spec">
                    <div class="fd-spec-label">Teknik</div>
                    <div class="fd-spec-val">@(!string.IsNullOrWhiteSpace(Model.TechnicalDetails) ? Model.TechnicalDetails : "-")</div>
                </div>
            </div>

            <div class="d-flex gap-2 mt-3">
                <a class="btn btn-outline-light"
                   asp-controller="Product"
                   asp-action="Index">
                    Geri
                </a>
            </div>

            <div class="mt-3">

                @if (!loggedIn)
                {
                    <div class="fd-login-hint">
                        Listeye eklemek için giriş yap.
                        <a class="btn btn-danger btn-sm ms-2"
                           asp-controller="Auth"
                           asp-action="Login"
                           asp-route-returnUrl="@returnUrl">
                            Giriş
                        </a>
                    </div>
                }
                else if (!hasLists)
                {
                    <div class="fd-login-hint">
                        Listeye eklemek için önce liste oluşturmalısın.
                        <a class="btn btn-danger btn-sm ms-2"
                           asp-controller="MyLists"
                           asp-action="Create">
                            + Liste Oluştur
                        </a>
                    </div>
                }
                else
                {
                    <form asp-controller="Product" asp-action="AddToList" method="post" class="mt-2">
                        @Html.AntiForgeryToken()

                        <input type="hidden" name="movieId" value="@Model.Id" />
                        <input type="hidden" name="returnUrl" value="@returnUrl" />

                        <div class="fd-actions">
                            <select class="form-select"
                                    name="listId"
                                    required>
                                @foreach (var item in memberLists)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            </select>

                            <input class="form-control"
                                   name="priority"
                                   type="number"
                                   min="1"
                                   placeholder="Öncelik"
                                   style="max-width:140px;" />

                            <button type="submit" class="btn btn-danger">
                                Listeye Ekle
                            </button>
                        </div>
                    </form>
                }

            </div>

            <div class="mt-4">
                <h5 class="mb-2">Yorumlar</h5>

                @if (!loggedIn)
                {
                    <div class="fd-login-hint">Yorum yapmak için giriş yap.</div>
                }
                else
                {
                    <form asp-controller="Product" asp-action="AddReview" method="post" class="mt-2">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="movieId" value="@Model.Id" />

                        <div class="row g-2">
                            <div class="col-12 col-md-3">
                                <select name="rating" class="form-select" required>
                                    <option value="5">5</option>
                                    <option value="4">4</option>
                                    <option value="3">3</option>
                                    <option value="2">2</option>
                                    <option value="1">1</option>
                                </select>
                            </div>
                            <div class="col-12 col-md-9">
                                <input name="comment" class="form-control" maxlength="500" placeholder="Yorum" />
                            </div>
                        </div>

                        <div class="mt-2">
                            <button type="submit" class="btn btn-danger">Kaydet</button>
                        </div>
                    </form>
                }

                <div class="mt-3">
                    @if (reviews.Count == 0)
                    {
                        <div class="fd-login-hint">Henüz yorum yok.</div>
                    }
                    else
                    {
                        foreach (var r in reviews)
                        {
                            <div class="border rounded p-3 mb-2">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <div><strong>@r.MemberFullName</strong></div>
                                        <div>Puan: @r.Rating</div>
                                        <div class="text-muted">@r.CreatedAt.ToString("dd.MM.yyyy HH:mm")</div>
                                    </div>

                                    @if (loggedIn && r.IsOwner)
                                    {
                                        <form asp-controller="Product" asp-action="DeleteReview" method="post">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="movieId" value="@Model.Id" />
                                            <input type="hidden" name="reviewId" value="@r.Id" />
                                            <button type="submit" class="btn btn-outline-danger btn-sm">Sil</button>
                                        </form>
                                    }
                                </div>

                                @if (!string.IsNullOrWhiteSpace(r.Comment))
                                {
                                    <div class="mt-2">@r.Comment</div>
                                }
                            </div>
                        }
                    }
                </div>
            </div>

            @if (Model.CategoryNames != null && Model.CategoryNames.Count > 0)
            {
                <div class="fd-tags mt-3">
                    @foreach (var t in Model.CategoryNames)
                    {
                        <span class="fd-tag">@t</span>
                    }
                </div>
            }

        </div>
    </div>
</div>
