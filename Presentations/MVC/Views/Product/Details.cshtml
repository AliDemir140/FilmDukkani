@using Application.DTOs.MovieDTOs
@using Application.DTOs.ReviewDTOs
@using Microsoft.AspNetCore.Mvc.Rendering
@using MVC.Constants
@model MovieDetailDto

@{
    ViewData["Title"] = "Film Detay";

    var cover = !string.IsNullOrWhiteSpace(Model.CoverImageUrl)
        ? Model.CoverImageUrl
        : $"https://picsum.photos/1200/700?random={Model.Id}";

    var token = Context.Session.GetString(SessionKeys.JwtToken);
    var memberId = Context.Session.GetInt32(SessionKeys.MemberId);
    var loggedIn = !string.IsNullOrWhiteSpace(token) && memberId.HasValue;

    var memberLists = ViewBag.MemberLists as List<SelectListItem> ?? new List<SelectListItem>();
    var hasLists = memberLists.Any();

    var reviews = ViewBag.Reviews as List<ReviewDto> ?? new List<ReviewDto>();

    var returnUrl = $"{Context.Request.Path}{Context.Request.QueryString}";

    var ratingText = Model.ReviewCount == 0 ? "0" : Model.AverageRating.ToString("0.0");

    var actorText = (Model.Actors != null && Model.Actors.Count > 0)
        ? string.Join(", ", Model.Actors)
        : "-";

    var directorText = (Model.Directors != null && Model.Directors.Count > 0)
        ? string.Join(", ", Model.Directors)
        : "-";
}

<div class="container py-4">

    <div class="row g-4 align-items-start">

        <div class="col-12 col-lg-6">
            <div class="fd-detail-poster fd-detail-poster--cinema">
                <div class="fd-detail-bg" style="background-image:url('@cover')"></div>
                <img src="@cover" alt="@Model.Title" loading="lazy" />
            </div>
        </div>

        <div class="col-12 col-lg-6">

            <h2 class="fd-detail-title">@Model.Title</h2>

            <div class="fd-detail-meta">
                <span class="badge bg-danger">@Model.ReleaseYear</span>

                @if (Model.CategoryNames != null && Model.CategoryNames.Count > 0)
                {
                    <span class="badge bg-dark border">@Model.CategoryNames.First()</span>
                }

                <span class="badge bg-dark border">
                    Puan: @ratingText (@Model.ReviewCount)
                </span>
            </div>

            @if (!string.IsNullOrWhiteSpace(Model.Description))
            {
                <p class="fd-detail-desc mt-3">
                    @Model.Description
                </p>
            }

            <div class="fd-detail-specs mt-3">
                <div class="fd-spec">
                    <div class="fd-spec-label">Yönetmen</div>
                    <div class="fd-spec-val">@directorText</div>
                </div>

                <div class="fd-spec">
                    <div class="fd-spec-label">Oyuncular</div>
                    <div class="fd-spec-val">@actorText</div>
                </div>

                <div class="fd-spec">
                    <div class="fd-spec-label">Teknik</div>
                    <div class="fd-spec-val">@(!string.IsNullOrWhiteSpace(Model.TechnicalDetails) ? Model.TechnicalDetails : "-")</div>
                </div>
            </div>

            <div class="d-flex gap-2 mt-3">
                <a class="btn btn-outline-light"
                   asp-controller="Product"
                   asp-action="Index">
                    Geri
                </a>
            </div>

            <div class="mt-3">
                @if (!loggedIn)
                {
                    <div class="fd-login-hint">
                        Listeye eklemek için giriş yap.
                        <a class="btn btn-danger btn-sm ms-2"
                           asp-controller="Auth"
                           asp-action="Login"
                           asp-route-returnUrl="@returnUrl">
                            Giriş
                        </a>
                    </div>
                }
                else if (!hasLists)
                {
                    <div class="fd-login-hint">
                        Listeye eklemek için önce liste oluşturmalısın.
                        <a class="btn btn-danger btn-sm ms-2"
                           asp-controller="MyLists"
                           asp-action="Create">
                            + Liste Oluştur
                        </a>
                    </div>
                }
                else
                {
                    <div class="fd-panel mt-2">
                        <div class="fd-panel-title">Listeye Ekle</div>

                        <form asp-controller="Product" asp-action="AddToList" method="post" class="mt-2">
                            @Html.AntiForgeryToken()

                            <input type="hidden" name="movieId" value="@Model.Id" />
                            <input type="hidden" name="returnUrl" value="@returnUrl" />

                            <div class="fd-actions">
                                <select class="form-select"
                                        name="listId"
                                        required>
                                    @foreach (var item in memberLists)
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                </select>

                                <input class="form-control"
                                       name="priority"
                                       type="number"
                                       min="1"
                                       placeholder="Öncelik"
                                       style="max-width:140px;" />

                                <button type="submit" class="btn btn-danger">
                                    Listeye Ekle
                                </button>
                            </div>
                        </form>
                    </div>

                    <div class="fd-panel mt-3">
                        <div class="fd-panel-title">Film İste</div>

                        <form asp-controller="PurchaseRequest" asp-action="Create" method="post" class="mt-2">
                            @Html.AntiForgeryToken()

                            <input type="hidden" name="movieId" value="@Model.Id" />
                            <input type="hidden" name="returnUrl" value="@returnUrl" />

                            <div class="fd-actions">
                                <input class="form-control"
                                       name="quantity"
                                       type="number"
                                       min="1"
                                       value="1"
                                       style="max-width:140px;" />

                                <input class="form-control"
                                       name="note"
                                       maxlength="500"
                                       placeholder="Not (opsiyonel)" />

                                <button type="submit" class="btn btn-warning">
                                    Film İste
                                </button>
                            </div>
                        </form>

                        <div class="fd-subtle mt-2">
                            Bu talep admin onayına düşer. Onaylanırsa depoya alım planlanır.
                        </div>
                    </div>

                    @if (!string.IsNullOrWhiteSpace(Model.TrailerUrl))
                    {
                        var trailer = Model.TrailerUrl.Trim();

                        // ✅ YouTube watch link -> embed link (en sık sorun bu)
                        if (trailer.Contains("youtube.com/watch", StringComparison.OrdinalIgnoreCase))
                        {
                            try
                            {
                                var uri = new Uri(trailer);
                                var q = Microsoft.AspNetCore.WebUtilities.QueryHelpers.ParseQuery(uri.Query);
                                if (q.TryGetValue("v", out var v) && !string.IsNullOrWhiteSpace(v))
                                {
                                    trailer = $"https://www.youtube.com/embed/{v}";
                                }
                            }
                            catch { }
                        }
                        else if (trailer.Contains("youtu.be/", StringComparison.OrdinalIgnoreCase))
                        {
                            try
                            {
                                var uri = new Uri(trailer);
                                var id = uri.AbsolutePath.Trim('/'); // youtu.be/{id}
                                if (!string.IsNullOrWhiteSpace(id))
                                {
                                    trailer = $"https://www.youtube.com/embed/{id}";
                                }
                            }
                            catch { }
                        }

                        <button type="button"
                                class="btn btn-outline-light mt-2"
                                data-bs-toggle="modal"
                                data-bs-target="#trailerModal">
                            <i class="fa-solid fa-play me-2"></i> Fragmanı İzle
                        </button>

                        <div class="modal fade" id="trailerModal" tabindex="-1" aria-hidden="true">
                            <div class="modal-dialog modal-xl modal-dialog-centered">
                                <div class="modal-content fd-modal">
                                    <div class="modal-header">
                                        <h5 class="modal-title">@Model.Title - Fragman</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
                                    </div>

                                    <div class="modal-body">
                                        <div class="ratio ratio-16x9">
                                            <iframe id="trailerFrame"
                                                    src="@trailer"
                                                    title="Trailer"
                                                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                                                    allowfullscreen>
                                            </iframe>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <script>
                            (function () {
                                const m = document.getElementById('trailerModal');
                                const iframe = document.getElementById('trailerFrame');
                                if (!m || !iframe) return;

                                const src = iframe.getAttribute('src');

                                m.addEventListener('hidden.bs.modal', function () {
                                    iframe.setAttribute('src', src); // kapatınca dursun
                                });
                            })();
                        </script>
                    }


                }
            </div>

            @if (Model.CategoryNames != null && Model.CategoryNames.Count > 0)
            {
                <div class="fd-tags mt-3">
                    @foreach (var t in Model.CategoryNames)
                    {
                        <span class="fd-tag">@t</span>
                    }
                </div>
            }

        </div>
    </div>

    <div class="row g-4 mt-2">
        <div class="col-12">
            <div class="fd-panel">
                <div class="fd-panel-head">
                    <div>
                        <div class="fd-panel-title">Yorumlar</div>
                        <div class="fd-panel-sub">
                            Ortalama: @ratingText / 5 · Toplam: @Model.ReviewCount
                        </div>
                    </div>

                    <div class="fd-panel-badges">
                        <span class="badge bg-dark border">Puan: @ratingText</span>
                        <span class="badge bg-dark border">@Model.ReviewCount Yorum</span>
                    </div>
                </div>

                <div class="row g-3 mt-1">

                    <div class="col-12 col-lg-4">
                        @if (!loggedIn)
                        {
                            <div class="fd-login-hint mt-0">
                                Yorum yapmak için giriş yap.
                                <a class="btn btn-danger btn-sm ms-2"
                                   asp-controller="Auth"
                                   asp-action="Login"
                                   asp-route-returnUrl="@returnUrl">
                                    Giriş
                                </a>
                            </div>
                        }
                        else
                        {
                            <form asp-controller="Product" asp-action="AddReview" method="post" class="fd-review-form">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="movieId" value="@Model.Id" />

                                <div class="fd-form-title">Yorum Ekle</div>

                                <div class="row g-2">
                                    <div class="col-12">
                                        <label class="form-label fd-form-label">Puan</label>
                                        <select name="rating" class="form-select" required>
                                            <option value="5">5</option>
                                            <option value="4">4</option>
                                            <option value="3">3</option>
                                            <option value="2">2</option>
                                            <option value="1">1</option>
                                        </select>
                                    </div>

                                    <div class="col-12">
                                        <label class="form-label fd-form-label">Yorum</label>
                                        <textarea name="comment"
                                              class="form-control"
                                              maxlength="500"
                                              rows="3"
                                              placeholder="Yorumunu yaz..."></textarea>
                                        <div class="fd-form-help">Maksimum 500 karakter</div>
                                    </div>
                                </div>

                                <div class="mt-2 d-grid">
                                    <button type="submit" class="btn btn-danger">Kaydet</button>
                                </div>
                            </form>
                        }
                    </div>

                    <div class="col-12 col-lg-8">
                        @if (reviews.Count == 0)
                        {
                            <div class="fd-empty2 mt-0">Henüz yorum yok.</div>
                        }
                        else
                        {
                            <div class="fd-review-list">
                                @foreach (var r in reviews)
                                {
                                    var initials = string.Empty;
                                    if (!string.IsNullOrWhiteSpace(r.MemberFullName))
                                    {
                                        var parts = r.MemberFullName.Split(' ', StringSplitOptions.RemoveEmptyEntries);
                                        if (parts.Length >= 1) initials += parts[0].Substring(0, 1).ToUpper();
                                        if (parts.Length >= 2) initials += parts[1].Substring(0, 1).ToUpper();
                                        if (initials.Length == 0) initials = "U";
                                    }
                                    else
                                    {
                                        initials = "U";
                                    }

                                    <div class="fd-review">
                                        <div class="fd-review-left">
                                            <div class="fd-avatar">@initials</div>
                                        </div>

                                        <div class="fd-review-body">
                                            <div class="fd-review-head">
                                                <div class="fd-review-name">@r.MemberFullName</div>
                                                <div class="fd-review-meta">@r.CreatedAt.ToString("dd.MM.yyyy HH:mm")</div>
                                            </div>

                                            <div class="fd-review-row">
                                                <span class="badge bg-dark border">Puan: @r.Rating</span>

                                                @if (loggedIn && r.IsOwner)
                                                {
                                                    <form asp-controller="Product" asp-action="DeleteReview" method="post" class="ms-auto">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="movieId" value="@Model.Id" />
                                                        <input type="hidden" name="reviewId" value="@r.Id" />
                                                        <button type="submit" class="btn btn-outline-danger btn-sm">Sil</button>
                                                    </form>
                                                }
                                            </div>

                                            @if (!string.IsNullOrWhiteSpace(r.Comment))
                                            {
                                                <div class="fd-review-comment">@r.Comment</div>
                                            }
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                    </div>

                </div>
            </div>
        </div>
    </div>

</div>
