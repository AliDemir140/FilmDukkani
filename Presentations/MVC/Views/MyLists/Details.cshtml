@model List<Application.DTOs.MemberMovieListDTOs.MemberMovieListItemDto>

@{
    ViewData["Title"] = "Liste Detayı";
    var listName = ViewBag.ListName as string ?? "Liste";
    int listId = ViewBag.ListId != null ? (int)ViewBag.ListId : 0;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">@listName</h2>

    <a asp-controller="MyLists"
       asp-action="Index"
       class="btn btn-outline-secondary">
        ← Listelerime Dön
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success mb-3">
        @TempData["Success"]
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger mb-3">
        @TempData["Error"]
    </div>
}

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">
        Bu listede henüz film bulunmuyor.
        <br />
        Filmler sayfasından bu listeye film ekleyebilirsin.
    </div>
}
else
{
    <div class="card dark-card">
        <div class="card-header">
            <b>Liste İçeriği</b>
        </div>

        <div class="card-body p-0">
            <table class="table dark-table table-hover mb-0 align-middle">
                <thead>
                    <tr>
                        <th style="width:80px;">#</th>
                        <th>Film</th>
                        <th style="width:180px;">Eklenme Tarihi</th>
                        <th style="width:140px;" class="text-end">İşlem</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.OrderBy(x => x.Priority))
                    {
                        <tr>
                            <td>@item.Priority</td>
                            <td>@(item.MovieTitle ?? "-")</td>
                            <td>@item.AddedDate.ToString("dd.MM.yyyy HH:mm")</td>
                            <td class="text-end">
                                <form asp-controller="MyLists"
                                      asp-action="DeleteItem"
                                      method="post"
                                      class="d-inline"
                                      onsubmit="return confirm('Bu filmi listeden silmek istiyor musun?');">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="itemId" value="@item.Id" />
                                    <input type="hidden" name="listId" value="@listId" />
                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                        <i class="fa-solid fa-trash"></i> Sil
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
