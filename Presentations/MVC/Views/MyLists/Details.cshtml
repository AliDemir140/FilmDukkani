@using MVC.Extensions
@using MVC.Models
@using MVC.Constants
@model List<Application.DTOs.MemberMovieListDTOs.MemberMovieListItemDto>

@{
    ViewData["Title"] = "Liste Detayı";
    var listName = ViewBag.ListName as string ?? "Liste";
    int listId = ViewBag.ListId != null ? (int)ViewBag.ListId : 0;
    bool isLocked = ViewBag.IsLocked != null && (bool)ViewBag.IsLocked;

    var ordered = (Model ?? new List<Application.DTOs.MemberMovieListDTOs.MemberMovieListItemDto>())
        .OrderBy(x => x.Priority)
        .ThenBy(x => x.AddedDate)
        .ToList();

    var cart = Context.Session.GetObject<List<CartItem>>(SessionKeys.Cart) ?? new List<CartItem>();
    bool cartHasItems = cart.Any();
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1">@listName</h2>

        @if (isLocked)
        {
            <div class="text-warning mt-2">
                <i class="fa-solid fa-lock"></i>
                Bu liste aktif siparişe bağlı olduğu için kilitli. Film ekleyemez / boşaltamaz / silemezsin.
            </div>
            <div class="mt-2">
                <a asp-controller="MyDeliveryRequests" asp-action="Index" class="btn btn-outline-warning btn-sm">
                    Siparişlerime Git (İptal Talebi Aç)
                </a>
            </div>
        }

        <form asp-controller="MyLists" asp-action="Rename" method="post" class="d-flex gap-2 mt-2" style="max-width:520px;">
            @Html.AntiForgeryToken()
            <input type="hidden" name="listId" value="@listId" />
            <input type="text" name="name" class="form-control" value="@listName" />
            <button type="submit" class="btn btn-outline-light">Kaydet</button>
        </form>
    </div>

    <div class="d-flex gap-2">
        @if (!cartHasItems)
        {
            <form asp-controller="MyLists" asp-action="AddListToCart" method="post" class="d-inline">
                @Html.AntiForgeryToken()
                <input type="hidden" name="listId" value="@listId" />
                <button type="submit" class="btn btn-danger" @(isLocked ? "disabled" : "")>
                    <i class="fa-solid fa-cart-shopping"></i> Listeyi Sepete Ekle
                </button>
            </form>
        }
        else
        {
            <a asp-controller="Cart" asp-action="Index" class="btn btn-outline-warning">
                <i class="fa-solid fa-cart-shopping"></i> Sepete Git
            </a>
        }

        <form asp-controller="MyLists" asp-action="ClearList" method="post" class="d-inline"
              onsubmit="return confirm('Liste içindeki tüm filmler silinsin mi? (Liste kalır)');">
            @Html.AntiForgeryToken()
            <input type="hidden" name="listId" value="@listId" />
            <button type="submit" class="btn btn-outline-danger" @(isLocked ? "disabled" : "")>
                <i class="fa-solid fa-broom"></i> Listeyi Boşalt
            </button>
        </form>

        <form asp-controller="MyLists" asp-action="DeleteList" method="post" class="d-inline"
              onsubmit="return confirm('Liste tamamen silinsin mi? (Sadece aktif sipariş yoksa)');">
            @Html.AntiForgeryToken()
            <input type="hidden" name="listId" value="@listId" />
            <button type="submit" class="btn btn-danger" @(isLocked ? "disabled" : "")>
                <i class="fa-solid fa-trash"></i> Listeyi Sil
            </button>
        </form>

        <a asp-controller="MyLists" asp-action="Index" class="btn btn-outline-secondary">
            ← Listelerime Dön
        </a>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success mb-3">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger mb-3">@TempData["Error"]</div>
}

@if (!ordered.Any())
{
    <div class="alert alert-info">
        Bu listede henüz film bulunmuyor.
        <br />
        Filmler sayfasından bu listeye film ekleyebilirsin.
    </div>
}
else
{
    <div class="card dark-card">
        <div class="card-header">
            <b>Liste İçeriği</b>
        </div>

        <div class="card-body p-0">
            <table class="table dark-table table-hover mb-0 align-middle">
                <thead>
                    <tr>
                        <th style="width:80px;">#</th>
                        <th>Film</th>
                        <th style="width:180px;">Eklenme Tarihi</th>
                        <th style="width:260px;" class="text-end">İşlem</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < ordered.Count; i++)
                    {
                        var item = ordered[i];
                        bool isFirst = i == 0;
                        bool isLast = i == ordered.Count - 1;

                        <tr>
                            <td>@item.Priority</td>
                            <td>@(item.MovieTitle ?? "-")</td>
                            <td>@item.AddedDate.ToString("dd.MM.yyyy HH:mm")</td>

                            <td class="text-end">
                                <form asp-controller="MyLists" asp-action="MoveItem" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="itemId" value="@item.Id" />
                                    <input type="hidden" name="listId" value="@listId" />
                                    <input type="hidden" name="direction" value="up" />
                                    <button type="submit" class="btn btn-sm btn-outline-light me-1" @(isFirst || isLocked ? "disabled" : "")>
                                        <i class="fa-solid fa-arrow-up"></i>
                                    </button>
                                </form>

                                <form asp-controller="MyLists" asp-action="MoveItem" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="itemId" value="@item.Id" />
                                    <input type="hidden" name="listId" value="@listId" />
                                    <input type="hidden" name="direction" value="down" />
                                    <button type="submit" class="btn btn-sm btn-outline-light me-2" @(isLast || isLocked ? "disabled" : "")>
                                        <i class="fa-solid fa-arrow-down"></i>
                                    </button>
                                </form>

                                <form asp-controller="MyLists" asp-action="DeleteItem" method="post" class="d-inline"
                                      onsubmit="return confirm('Bu filmi listeden silmek istiyor musun?');">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="itemId" value="@item.Id" />
                                    <input type="hidden" name="listId" value="@listId" />
                                    <button type="submit" class="btn btn-sm btn-outline-danger" @(isLocked ? "disabled" : "")>
                                        <i class="fa-solid fa-trash"></i> Sil
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
