@model List<Application.DTOs.MemberMovieListDTOs.MemberMovieListDto>

@{
    ViewData["Title"] = "Listelerim";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Listelerim</h2>

    <div class="d-flex gap-2">
        <form asp-controller="MyLists" asp-action="ClearAllNonOrdered" method="post" class="d-inline">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-outline-danger"
                    onclick="return confirm('Siparişe girmemiş tüm listelerin içeriği temizlensin mi? (Listeler kalır)');">
                <i class="fa-solid fa-broom"></i> Toplu Temizlik
            </button>
        </form>

        <a class="btn btn-danger"
           asp-controller="MyLists"
           asp-action="Create">
            + Yeni Liste
        </a>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success mb-3">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger mb-3">@TempData["Error"]</div>
}

@if (Model == null || !Model.Any())
{
    <div class="card dark-card">
        <div class="card-body text-center py-5">
            <i class="fa-solid fa-list text-danger fs-1 mb-3"></i>
            <h5 class="mb-2">Henüz bir listen yok</h5>
            <p class="text-muted mb-4">
                Film listeni oluştur, sonra filmleri listene ekleyerek sipariş sürecini başlat.
            </p>

            <a class="btn btn-danger"
               asp-controller="MyLists"
               asp-action="Create">
                İlk Listemi Oluştur
            </a>
        </div>
    </div>
}
else
{
    <div class="card dark-card">
        <div class="card-header">
            <b>Listeler</b>
        </div>

        <div class="card-body p-0">
            <table class="table dark-table table-hover mb-0 align-middle">
                <thead>
                    <tr>
                        <th style="width:90px;">#</th>
                        <th>Liste Adı</th>
                        <th class="text-end" style="width:160px;">İşlem</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var l in Model)
                    {
                        <tr>
                            <td>#@l.Id</td>
                            <td>@l.Name</td>
                            <td class="text-end">
                                <a class="btn btn-sm btn-outline-light"
                                   asp-controller="MyLists"
                                   asp-action="Details"
                                   asp-route-id="@l.Id">
                                    Detay
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
