@model List<Application.DTOs.DeliveryRequestDTOs.DeliveryRequestListDto>

@{
    ViewData["Title"] = "Siparişlerim";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Siparişlerim</h2>
</div>


@if (Model == null || !Model.Any())
{
    <div class="card dark-card">
        <div class="card-body text-center py-5">
            <i class="fa-solid fa-box-open text-danger fs-1 mb-3"></i>
            <h5 class="mb-2">Henüz siparişin yok</h5>
            <p class="text-muted mb-4">
                Sepete film ekleyip “Teslimatı Onayla” dediğinde siparişlerin burada görünecek.
            </p>

            <a asp-controller="Product" asp-action="Index" class="btn btn-danger">
                Filmlere Git
            </a>
        </div>
    </div>
}
else
{
    <div class="card dark-card">
        <div class="card-header">
            <b>Tüm Siparişler</b>
        </div>

        <div class="card-body p-0">
            <table class="table dark-table table-hover mb-0 align-middle">
                <thead>
                    <tr>
                        <th style="width:90px;">#</th>
                        <th>Liste Adı</th>
                        <th style="width:160px;">Teslimat Tarihi</th>
                        <th style="width:160px;">Durum</th>
                        <th style="width:360px;">İptal Talebi</th>
                        <th class="text-center" style="width:120px;">Detay</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>#@item.Id</td>
                            <td>@item.ListName</td>
                            <td>@item.DeliveryDate.ToString("dd.MM.yyyy")</td>
                            <td>
                                @switch (item.Status)
                                {
                                    case Domain.Enums.DeliveryStatus.Pending:
                                        <span class="badge bg-secondary">Bekliyor</span>
                                        break;
                                    case Domain.Enums.DeliveryStatus.Prepared:
                                        <span class="badge bg-warning text-dark">Hazırlandı</span>
                                        break;
                                    case Domain.Enums.DeliveryStatus.Shipped:
                                        <span class="badge bg-info text-dark">Kuryede</span>
                                        break;
                                    case Domain.Enums.DeliveryStatus.Delivered:
                                        <span class="badge bg-primary">Teslim Edildi</span>
                                        break;
                                    case Domain.Enums.DeliveryStatus.Completed:
                                        <span class="badge bg-success">Tamamlandı</span>
                                        break;
                                    case Domain.Enums.DeliveryStatus.CancelRequested:
                                        <span class="badge bg-warning text-dark">İptal Talebi (Bekliyor)</span>
                                        break;
                                    case Domain.Enums.DeliveryStatus.Cancelled:
                                        <span class="badge bg-danger">İptal</span>
                                        break;
                                    default:
                                        <span class="badge bg-dark">Bilinmiyor</span>
                                        break;
                                }
                            </td>

                            <td>
                                @{
                                    bool canRequestCancel = item.Status == Domain.Enums.DeliveryStatus.Pending
                                    || item.Status == Domain.Enums.DeliveryStatus.Prepared;
                                }

                                @if (!canRequestCancel)
                                {
                                    <span class="text-muted">-</span>
                                }
                                else
                                {
                                    <form asp-action="RequestCancel" method="post" class="d-flex gap-2">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="requestId" value="@item.Id" />

                                        <select class="form-select form-select-sm" name="reason" required>
                                            <option value="">Sebep seç</option>
                                            <option>Yanlış listeyle sipariş verdim</option>
                                            <option>Teslimat tarihi uygun değil</option>
                                            <option>Filmlerimi değiştirmek istiyorum</option>
                                            <option>Artık istemiyorum</option>
                                        </select>

                                        <button type="submit" class="btn btn-sm btn-outline-danger"
                                                onclick="return confirm('İptal talebi oluşturulsun mu? (Admin onayı gerekecek)');">
                                            İptal Talebi
                                        </button>
                                    </form>
                                }
                            </td>

                            <td class="text-center">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-light">
                                    Detay
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
