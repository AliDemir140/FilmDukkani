@using Application.DTOs.MovieDTOs
@using Microsoft.AspNetCore.Mvc.Rendering
@using MVC.Constants
@using Microsoft.AspNetCore.Http
@model MovieDto

@{
    var cover = !string.IsNullOrWhiteSpace(Model.CoverImageUrl)
        ? Model.CoverImageUrl
        : $"https://picsum.photos/400/600?random={Model.Id}";

    var token = Context.Session.GetString(SessionKeys.JwtToken);
    bool isLoggedIn = !string.IsNullOrEmpty(token);

    var memberLists = ViewBag.MemberLists as List<SelectListItem> ?? new List<SelectListItem>();
    var hasLists = memberLists.Any();

    var returnUrl = $"{Context.Request.Path}{Context.Request.QueryString}";
}

<div class="card h-100 border-0 product-card">
    <div class="ratio ratio-4x3 overflow-hidden rounded-top">
        <img src="@cover"
             alt="@Model.Title"
             class="w-100 h-100"
             style="object-fit:cover;" />
    </div>

    <div class="card-body">
        <h6 class="card-title mb-1 text-truncate" title="@Model.Title">
            @Model.Title
        </h6>

        <div class="small text-muted mb-2">
            @Model.ReleaseYear
            @if (!string.IsNullOrWhiteSpace(Model.CategoryName))
            {
                <span> • @Model.CategoryName</span>
            }
        </div>

        @if (!string.IsNullOrWhiteSpace(Model.Description))
        {
            <p class="card-text small text-muted"
               style="min-height:40px; max-height:40px; overflow:hidden;">
                @Model.Description
            </p>
        }
    </div>

    <div class="card-footer bg-transparent border-0 pt-0">
        <div class="d-grid gap-2">
            <a class="btn btn-outline-dark"
               asp-controller="Product"
               asp-action="Details"
               asp-route-id="@Model.Id">
                Detay
            </a>

            @if (!isLoggedIn)
            {
                <a class="btn btn-danger"
                   asp-controller="Auth"
                   asp-action="Login">
                    Listeye eklemek için giriş yap
                </a>
            }
            else if (!hasLists)
            {
                <a class="btn btn-danger"
                   asp-controller="MyLists"
                   asp-action="Create">
                    + Önce liste oluştur
                </a>
            }
            else
            {
                <form asp-controller="Product"
                      asp-action="AddToList"
                      method="post">
                    @Html.AntiForgeryToken()

                    <input type="hidden" name="movieId" value="@Model.Id" />
                    <input type="hidden" name="returnUrl" value="@returnUrl" />

                    <select name="listId" class="form-select form-select-sm mb-2" required>
                        <option value="">Liste seç</option>
                        @foreach (var l in memberLists)
                        {
                            <option value="@l.Value">@l.Text</option>
                        }
                    </select>

                    @* İstersen priority açarsın (şimdilik gizli 1 bırakıyorum) *@
                    <input type="hidden" name="priority" value="1" />

                    <button type="submit" class="btn btn-danger btn-sm w-100">
                        Listeye Ekle
                    </button>
                </form>
            }
        </div>
    </div>
</div>
