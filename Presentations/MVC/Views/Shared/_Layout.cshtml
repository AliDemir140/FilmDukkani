@using MVC.Extensions
@using MVC.Models
@using MVC.Constants
@using Microsoft.AspNetCore.Http

@{
    var cart = Context.Session.GetObject<List<CartItem>>(SessionKeys.Cart);
    var cartCount = cart?.Count ?? 0;

    var token = Context.Session.GetString(SessionKeys.JwtToken);
    var userName = Context.Session.GetString(SessionKeys.UserName);
    var role = Context.Session.GetString(SessionKeys.Role);

    var area = ViewContext.RouteData.Values["area"]?.ToString();
    bool isDashBoard = string.Equals(area, "DashBoard", StringComparison.OrdinalIgnoreCase);

    bool isLoggedIn = !string.IsNullOrEmpty(token);

    var controller = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
    string Active(string c, string? a = null)
    {
        bool controllerOk = controller.Equals(c, StringComparison.OrdinalIgnoreCase);
        bool areaOk = a == null
            ? string.IsNullOrEmpty(area)
            : string.Equals(area, a, StringComparison.OrdinalIgnoreCase);

        return (controllerOk && areaOk) ? "active" : "";
    }
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FilmDukkani</title>

    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link rel="stylesheet"
          href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet"
          href="~/css/site.css"
          asp-append-version="true" />
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark fd-navbar">
            <div class="container-fluid">

                <!-- SOL: LOGO -->
                <a class="navbar-brand fd-logo"
                   asp-area=""
                   asp-controller="Home"
                   asp-action="Index">
                    FilmDukkani
                </a>

                <button class="navbar-toggler"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#mainNav"
                        aria-controls="mainNav"
                        aria-expanded="false"
                        aria-label="Menüyü aç/kapat">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNav">

                    <!-- ORTA: MENÜLER -->
                    <ul class="navbar-nav mx-auto fd-nav-center">

                        <li class="nav-item">
                            <a class="nav-link @Active("Home")"
                               asp-area=""
                               asp-controller="Home"
                               asp-action="Index"
                               aria-current="@(Active("Home") == "active" ? "page" : null)">
                                <i class="fa-solid fa-house me-1"></i> Ana Sayfa
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link @Active("Product")"
                               asp-area=""
                               asp-controller="Product"
                               asp-action="Index"
                               aria-current="@(Active("Product") == "active" ? "page" : null)">
                                <i class="fa-solid fa-film me-1"></i> Filmler
                            </a>
                        </li>

                        <li class="nav-item position-relative">
                            <a class="nav-link @Active("Cart")"
                               asp-area=""
                               asp-controller="Cart"
                               asp-action="Index"
                               aria-current="@(Active("Cart") == "active" ? "page" : null)">
                                <i class="fa-solid fa-cart-shopping me-1"></i> Sepet
                                @if (cartCount > 0)
                                {
                                    <span class="badge bg-danger ms-1">@cartCount</span>
                                }
                            </a>
                        </li>

                        @* Login olan kullanıcıya özel *@
                        @if (isLoggedIn)
                        {
                            <li class="nav-item">
                                <a class="nav-link @Active("MyLists")"
                                   asp-area=""
                                   asp-controller="MyLists"
                                   asp-action="Index"
                                   aria-current="@(Active("MyLists") == "active" ? "page" : null)">
                                    <i class="fa-solid fa-list me-1"></i> Listelerim
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link @Active("MyDeliveryRequests")"
                                   asp-area=""
                                   asp-controller="MyDeliveryRequests"
                                   asp-action="Index"
                                   aria-current="@(Active("MyDeliveryRequests") == "active" ? "page" : null)">
                                    <i class="fa-solid fa-box me-1"></i> Siparişlerim
                                </a>
                            </li>
                        }

                        @* Admin ise dashboard *@
                        @if (isLoggedIn && role == "Admin")
                        {
                            <li class="nav-item">
                                <a class="nav-link @Active("Home", "DashBoard")"
                                   asp-area="DashBoard"
                                   asp-controller="Home"
                                   asp-action="Index"
                                   aria-current="@(Active("Home", "DashBoard") == "active" ? "page" : null)">
                                    <i class="fa-solid fa-gauge-high me-1"></i> Dashboard
                                </a>
                            </li>
                        }
                    </ul>

                    <!-- SAĞ: AUTH -->
                    <div class="d-flex align-items-center gap-2 ms-lg-2">
                        @if (!isLoggedIn)
                        {
                            <a asp-area=""
                               asp-controller="Auth"
                               asp-action="Login"
                               class="btn btn-outline-light btn-sm">
                                Giriş
                            </a>

                            <a asp-area=""
                               asp-controller="Auth"
                               asp-action="Register"
                               class="btn btn-danger btn-sm">
                                Kayıt Ol
                            </a>
                        }
                        else
                        {
                            <span class="text-light small me-2">
                                <i class="fa-solid fa-user"></i> @userName
                            </span>

                            <a asp-area=""
                               asp-controller="Auth"
                               asp-action="Logout"
                               class="btn btn-outline-warning btn-sm">
                                Çıkış
                            </a>
                        }
                    </div>

                </div>
            </div>
        </nav>
    </header>

    <main class="container-fluid py-4">
        @if (isDashBoard)
        {
            <div class="row">
                <div class="col-12 col-md-3 col-lg-2 mb-3">
                    <partial name="~/Views/Shared/_DashBoardSidebar.cshtml" />
                </div>
                <div class="col-12 col-md-9 col-lg-10">
                    @RenderBody()
                </div>
            </div>
        }
        else
        {
            <div class="container">
                @RenderBody()
            </div>
        }
    </main>

    <footer class="footer text-muted py-3 border-top">
        <div class="container">
            &copy; @DateTime.Now.Year - FilmDukkani
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
