@using MVC.Extensions
@using MVC.Models
@using MVC.Constants
@using Microsoft.AspNetCore.Http

@{
    var cart = Context.Session.GetObject<List<CartItem>>(SessionKeys.Cart);
    var cartCount = cart?.Count ?? 0;

    var token = Context.Session.GetString(SessionKeys.JwtToken);
    var userName = Context.Session.GetString(SessionKeys.UserName);
    var role = Context.Session.GetString(SessionKeys.Role);

    var area = ViewContext.RouteData.Values["area"]?.ToString();
    bool isDashBoard = string.Equals(area, "DashBoard", StringComparison.OrdinalIgnoreCase);

    bool isLoggedIn = !string.IsNullOrEmpty(token);

    var controller = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
    string Active(string c, string? a = null)
    {
        bool controllerOk = controller.Equals(c, StringComparison.OrdinalIgnoreCase);
        bool areaOk = a == null
            ? string.IsNullOrEmpty(area)
            : string.Equals(area, a, StringComparison.OrdinalIgnoreCase);

        return (controllerOk && areaOk) ? "active" : "";
    }
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FilmDukkani</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link rel="stylesheet"
          href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet"
          href="~/css/site.css"
          asp-append-version="true" />
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark fd-navbar fixed-top">
            <div class="container-fluid">

                <a class="navbar-brand fd-logo" asp-controller="Home" asp-action="Index">
                    <img src="~/images/Logo.svg"
                         class="fd-logo-img"
                         alt="FilmDukkani" />
                </a>



                <button class="navbar-toggler"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#mainNav"
                        aria-controls="mainNav"
                        aria-expanded="false"
                        aria-label="Menüyü aç/kapat">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNav">

                    <ul class="navbar-nav mx-auto fd-nav-center">

                        <li class="nav-item">
                            <a class="nav-link @Active("Home")"
                               asp-area=""
                               asp-controller="Home"
                               asp-action="Index"
                               aria-current="@(Active("Home") == "active" ? "page" : null)">
                                <i class="fa-solid fa-house me-1"></i> Ana Sayfa
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link @Active("Product")"
                               asp-area=""
                               asp-controller="Product"
                               asp-action="Index"
                               aria-current="@(Active("Product") == "active" ? "page" : null)">
                                <i class="fa-solid fa-film me-1"></i> Filmler
                            </a>
                        </li>

                        <li class="nav-item position-relative">
                            <a class="nav-link @Active("Cart")"
                               asp-area=""
                               asp-controller="Cart"
                               asp-action="Index"
                               aria-current="@(Active("Cart") == "active" ? "page" : null)">
                                <i class="fa-solid fa-cart-shopping me-1"></i> Sepet
                                @if (cartCount > 0)
                                {
                                    <span class="badge bg-danger ms-1">@cartCount</span>
                                }
                            </a>
                        </li>

                        @if (isLoggedIn)
                        {
                            <li class="nav-item">
                                <a class="nav-link @Active("MyLists")"
                                   asp-area=""
                                   asp-controller="MyLists"
                                   asp-action="Index"
                                   aria-current="@(Active("MyLists") == "active" ? "page" : null)">
                                    <i class="fa-solid fa-list me-1"></i> Listelerim
                                </a>
                            </li>                

                            <li class="nav-item">
                                <a class="nav-link @Active("PurchaseRequest")"
                                   asp-area=""
                                   asp-controller="PurchaseRequest"
                                   asp-action="My">
                                    <i class="fa-solid fa-hand-point-up me-1"></i> İsteklerim
                                </a>
                            </li>
                        }

                        @if (isLoggedIn && (role == "Admin" || role == "Accounting" || role == "Warehouse" || role == "Purchasing"))
                        {
                            <li class="nav-item">
                                <a class="nav-link @Active("Home", "DashBoard")"
                                   asp-area="DashBoard"
                                   asp-controller="Home"
                                   asp-action="Index"
                                   aria-current="@(Active("Home", "DashBoard") == "active" ? "page" : null)">
                                    <i class="fa-solid fa-gauge-high me-1"></i> Dashboard
                                </a>
                            </li>
                        }

                    </ul>

                    <div class="d-flex align-items-center gap-2 ms-lg-2">
                        @if (!isLoggedIn)
                        {
                            <a asp-area=""
                               asp-controller="Auth"
                               asp-action="Login"
                               class="btn btn-outline-light btn-sm">
                                Giriş
                            </a>

                            <a asp-area=""
                               asp-controller="Auth"
                               asp-action="Register"
                               class="btn btn-danger btn-sm">
                                Kayıt Ol
                            </a>
                        }
                        else
                        {
                            <div class="dropdown fd-user-dropdown">
                                <button class="btn btn-outline-light btn-sm dropdown-toggle"
                                        type="button"
                                        data-bs-toggle="dropdown"
                                        aria-expanded="false">
                                    <i class="fa-solid fa-user me-1"></i> @userName
                                </button>

                                <ul class="dropdown-menu dropdown-menu-end fd-user-menu">
                                    <li>
                                        <a class="dropdown-item"
                                           asp-area=""
                                           asp-controller="Account"
                                           asp-action="Membership">
                                            <i class="fa-solid fa-id-card me-2"></i> Üyeliğim
                                        </a>
                                    </li>

                                    <li>
                                        <a class="dropdown-item"
                                           asp-area=""
                                           asp-controller="MyDeliveryRequests"
                                           asp-action="Index">
                                            <i class="fa-solid fa-box me-2"></i> Siparişlerim
                                        </a>
                                    </li>

                                    <li>
                                        <a class="dropdown-item"
                                           asp-area=""
                                           asp-controller="MyLists"
                                           asp-action="Index">
                                            <i class="fa-solid fa-list me-2"></i> Listelerim
                                        </a>
                                    </li>

                                    @if (role == "Admin" || role == "Accounting" || role == "Warehouse" || role == "Purchasing")
                                    {
                                        <li><hr class="dropdown-divider" /></li>
                                        <li>
                                            <a class="dropdown-item"
                                               asp-area="DashBoard"
                                               asp-controller="Home"
                                               asp-action="Index">
                                                <i class="fa-solid fa-gauge-high me-2"></i> Dashboard
                                            </a>
                                        </li>
                                    }


                                    <li><hr class="dropdown-divider" /></li>

                                    <li>
                                        <a class="dropdown-item text-warning"
                                           asp-area=""
                                           asp-controller="Auth"
                                           asp-action="Logout">
                                            <i class="fa-solid fa-right-from-bracket me-2"></i> Çıkış
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        }
                    </div>

                </div>
            </div>
        </nav>
    </header>

    <main class="container-fluid py-4">

        <div class="container">
            @if (TempData["Success"] != null)
            {
                <div class="alert fd-alert fd-alert-success alert-dismissible fade show mt-3 fd-alert-top" role="alert">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert fd-alert fd-alert-danger alert-dismissible fade show mt-3 fd-alert-top" role="alert">
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
        </div>

        @if (isDashBoard)
        {
            <div class="row">
                <div class="col-12 col-md-3 col-lg-2 mb-3">
                    <partial name="~/Views/Shared/_DashBoardSidebar.cshtml" />
                </div>
                <div class="col-12 col-md-9 col-lg-10">
                    @RenderBody()
                </div>
            </div>
        }
        else
        {
            <div class="container">
                @RenderBody()
            </div>
        }
    </main>

    <footer class="footer text-muted py-3 border-top">
        <div class="container">
            &copy; @DateTime.Now.Year - FilmDukkani
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        window.addEventListener("scroll", function () {
            const nav = document.querySelector(".fd-navbar");
            if (!nav) return;

            if (window.scrollY > 10) {
                nav.classList.add("scrolled");
            } else {
                nav.classList.remove("scrolled");
            }
        });
    </script>
    <script>
        (function () {
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            tooltipTriggerList.forEach(function (el) {
                new bootstrap.Tooltip(el);
            });
        })();
    </script>

    @RenderSection("Scripts", required: false)

</body>
</html>
