<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FilmDukkani</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark fd-navbar">
            <div class="container-fluid">

                <!-- Logo -->
                <a class="navbar-brand fd-logo"
                   asp-area="" asp-controller="Home" asp-action="Index">
                    FilmDukkani
                </a>

                <button class="navbar-toggler" type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#mainNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNav">

                    <!-- Orta Menü -->
                    <ul class="navbar-nav mx-auto fd-nav-center">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Product" asp-action="Index">Filmler</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="DashBoard" asp-controller="Home" asp-action="Index">DashBoard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Cart" asp-action="Index">Sepet</a>
                        </li>
                    </ul>

                    <!-- Sağ -->
                    <div class="d-flex gap-2">
                        <a class="btn btn-outline-light btn-sm">Giriş</a>
                        <a class="btn btn-danger btn-sm">Kayıt Ol</a>
                    </div>

                </div>
            </div>
        </nav>
    </header>

    <main class="container-fluid py-4">
        @{
            var area = ViewContext.RouteData.Values["area"]?.ToString();
            bool isDashBoard = string.Equals(area, "DashBoard", StringComparison.OrdinalIgnoreCase);
        }

        @if (isDashBoard)
        {
            <div class="row">
                <div class="col-12 col-md-3 col-lg-2 mb-3">
                    <partial name="~/Views/Shared/_DashBoardSidebar.cshtml" />
                </div>
                <div class="col-12 col-md-9 col-lg-10">
                    @RenderBody()
                </div>
            </div>
        }
        else
        {
            <div class="container">
                @RenderBody()
            </div>
        }
    </main>

    <footer class="footer text-muted py-3 border-top">
        <div class="container">
            &copy; @DateTime.Now.Year - FilmDukkani
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
