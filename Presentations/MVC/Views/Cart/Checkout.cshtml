@model MVC.Models.CheckoutViewModel

@{
    ViewData["Title"] = "Checkout";
}

<h3 class="mb-3">Checkout</h3>

<form method="post" asp-action="CheckoutConfirm">

    <div class="card product-card p-3 mb-3">
        <h6>Sepetteki Filmler</h6>

        <ul class="list-group list-group-flush">
            @foreach (var item in Model.CartItems)
            {
                <li class="list-group-item bg-transparent text-light d-flex justify-content-between">
                    <span>@item.MovieTitle (@item.ReleaseYear)</span>
                </li>
            }
        </ul>
    </div>

    <div class="card product-card p-3 mb-3">
        <div class="mb-3">
            <label class="form-label">Liste Seç</label>
            <select asp-for="SelectedListId" asp-items="Model.MemberLists" class="form-select"></select>
        </div>

        <div class="mb-3">
            <label class="form-label">Teslimat Tarihi</label>
            <input asp-for="DeliveryDate" type="date" class="form-control" />
        </div>
    </div>

    <div class="d-flex gap-2">
        <a asp-action="Index" class="btn btn-outline-light">Geri</a>
        <button type="submit" class="btn btn-danger">Onayla</button>
    </div>

</form>
