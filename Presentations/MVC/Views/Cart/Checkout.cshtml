@model MVC.Models.CheckoutViewModel

@{
    ViewData["Title"] = "Teslimat Onayı";
}

<h2 class="mb-4">Teslimat Onayı</h2>

<form asp-action="Checkout" method="post">
    @Html.AntiForgeryToken()

    <div class="card dark-card mb-4">
        <div class="card-header">
            <b>Sepetteki Filmler</b>
        </div>
        <div class="card-body p-0">
            <table class="table dark-table mb-0">
                <thead>
                    <tr>
                        <th>Film</th>
                        <th style="width:120px;">Yıl</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.CartItems)
                    {
                        <tr>
                            <td>@item.MovieTitle</td>
                            <td>@item.ReleaseYear</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="card dark-card mb-4">
        <div class="card-header">
            <b>Teslimat Bilgileri</b>
        </div>
        <div class="card-body">

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["Error"]
                </div>
            }

            <div class="mb-3">
                <label class="form-label">Film Listesi</label>

                <div class="d-flex gap-2">
                    <select asp-for="SelectedListId"
                            asp-items="Model.MemberLists"
                            class="form-select">
                    </select>

                    <a asp-controller="MyLists"
                       asp-action="Create"
                       class="btn btn-outline-danger"
                       style="white-space:nowrap;">
                        + Yeni Liste
                    </a>
                </div>

                <span asp-validation-for="SelectedListId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Teslimat Tarihi</label>
                <input asp-for="DeliveryDate"
                       type="date"
                       class="form-control" />
                <span asp-validation-for="DeliveryDate" class="text-danger"></span>
            </div>

        </div>
    </div>

    <div class="d-flex gap-2">
        <a asp-action="Index" class="btn btn-outline-secondary">
            Sepete Geri Dön
        </a>

        <button type="submit" class="btn btn-danger">
            Teslimatı Onayla
        </button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
