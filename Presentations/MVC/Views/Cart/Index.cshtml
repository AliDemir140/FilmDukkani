@model List<MVC.Models.CartItem>

@{
    ViewData["Title"] = "Sepet";
}

<h3>Sepetim</h3>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@if (!Model.Any())
{
    <div class="alert alert-warning">Sepetiniz boş.</div>
}
else
{
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div></div>

        <form asp-action="Clear" method="post" class="m-0">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-outline-danger"
                    onclick="return confirm('Sepetteki tüm ürünler silinsin mi?');">
                Sepeti Boşalt
            </button>
        </form>
    </div>

    <table class="table table-hover align-middle">
        <thead>
            <tr>
                <th>Film</th>
                <th>Yıl</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.MovieTitle</td>
                    <td>@item.ReleaseYear</td>
                    <td class="text-end">
                        <a class="btn btn-sm btn-danger"
                           asp-action="Remove"
                           asp-route-id="@item.MovieId">
                            Çıkar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @if (string.IsNullOrEmpty(Context.Session.GetString("JWT")))
    {
        <a asp-controller="Auth"
           asp-action="Login"
           class="btn btn-warning">
            Sipariş vermek için giriş yapın
        </a>
    }
    else
    {
        <a asp-action="Checkout" class="btn btn-danger">
            Sepeti Onayla
        </a>
    }
}
