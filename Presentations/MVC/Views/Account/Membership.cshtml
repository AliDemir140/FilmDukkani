@using MVC.Models
@model AccountMembershipViewModel

@{
    ViewData["Title"] = "Üyeliğim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4 membership-page">
    <h3 class="mb-3">Üyeliğim</h3>

    @if (Model.Profile == null)
    {
        <div class="alert alert-warning">Üyelik bilgisi bulunamadı.</div>
    }
    else
    {
        <div class="card mb-3 membership-card">
            <div class="card-body">
                <div class="row g-2">
                    <div class="col-12 col-md-6">
                        <div><strong>Üye:</strong> @Model.Profile.FullName</div>
                        <div><strong>Email:</strong> @Model.Profile.Email</div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div><strong>Plan:</strong> @Model.Profile.MembershipPlanName</div>
                        <div><strong>Durum:</strong> @Model.Profile.Status</div>
                        <div><strong>Başlangıç:</strong> @Model.Profile.MembershipStartDate.ToString("dd.MM.yyyy")</div>
                    </div>
                </div>

                @if (Model.IsBlockedForCheckout)
                {
                    <div class="alert alert-danger mt-3 mb-0">
                        Teslimat oluşturmak için üyeliğini aktifleştirmen gerekiyor.
                    </div>
                }
            </div>
        </div>

        <div class="card membership-card">
            <div class="card-body">
                <h5 class="mb-3">Plan Seç</h5>

                @if (Model.Plans == null || !Model.Plans.Any())
                {
                    <div class="alert alert-warning mb-0">Sistemde plan bulunamadı.</div>
                }
                else
                {
                    <form asp-controller="Account" asp-action="UpdateMembershipPlan" method="post" class="row g-2 align-items-end">
                        @Html.AntiForgeryToken()

                        <div class="col-12 col-md-8">
                            <label class="form-label">Plan</label>
                            <select class="form-select" name="selectedPlanId">
                                @foreach (var p in Model.Plans)
                                {
                                    if (p.Value == Model.SelectedPlanId.ToString())
                                    {
                                        <option value="@p.Value" selected>@p.Text</option>
                                    }
                                    else
                                    {
                                        <option value="@p.Value">@p.Text</option>
                                    }
                                }
                            </select>
                        </div>

                        <div class="col-12 col-md-4">
                            <button type="submit" class="btn btn-danger w-100">
                                @(Model.IsActive ? "Planı Değiştir" : "Satın Al / Aktifleştir")
                            </button>
                        </div>
                    </form>
                }
            </div>
        </div>
    }
</div>
