@using Application.DTOs.CourierDTOs
@using Application.DTOs.DeliveryRequestDTOs
@model List<DeliveryRequestDto>

@{
    ViewData["Title"] = "Kurye Bazlı Dağıtım Listesi";

    var couriers = ViewBag.Couriers as List<CourierDto> ?? new List<CourierDto>();
    int? selectedCourierId = ViewBag.SelectedCourierId as int?;
    DateTime selectedDate = (DateTime)(ViewBag.SelectedDate ?? DateTime.Today);
}

<h2>Kurye Bazlı Dağıtım Listesi</h2>

<form method="get" class="row g-2 align-items-end mb-3">
    <div class="col-12 col-md-4">
        <label class="form-label">Kurye</label>
        <select name="courierId" class="form-select" required>
            <option value="">Seç</option>
            @foreach (var c in couriers)
            {
                <option value="@c.Id" selected="@(selectedCourierId == c.Id)">
                    @c.FullName
                </option>
            }
        </select>
    </div>

    <div class="col-12 col-md-3">
        <label class="form-label">Tarih</label>
        <input type="date" name="date" class="form-control"
               value="@selectedDate.ToString("yyyy-MM-dd")" />
    </div>

    <div class="col-12 col-md-2">
        <button type="submit" class="btn btn-primary w-100">Getir</button>
    </div>
</form>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">Kayıt yok.</div>
}
else
{
    <table class="table table-striped table-hover align-middle">
        <thead>
            <tr>
                <th style="width:90px;">#</th>
                <th>Üye</th>
                <th>Liste</th>
                <th style="width:140px;">Teslimat</th>
                <th style="width:160px;">Durum</th>
                <th style="width:120px;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model)
            {
                <tr>
                    <td>@r.Id</td>
                    <td>@r.MemberFullName</td>
                    <td>@r.ListName</td>
                    <td>@r.DeliveryDate.ToString("dd.MM.yyyy")</td>
                    <td>@r.Status</td>
                    <td class="text-end">
                        <a class="btn btn-sm btn-outline-info"
                           asp-area="DashBoard"
                           asp-controller="DeliveryRequest"
                           asp-action="Details"
                           asp-route-id="@r.Id">Detay</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
