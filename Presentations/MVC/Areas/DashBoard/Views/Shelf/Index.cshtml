@model List<ShelfDto>
@{
    ViewData["Title"] = "Raflar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="mb-0">Raflar</h3>

    <a class="btn btn-primary"
       asp-area="DashBoard" asp-controller="Shelf" asp-action="Create">
        Yeni Raf Ekle
    </a>
</div>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-warning">Henüz raf yok.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead>
                <tr>
                    <th style="width:80px;">ID</th>
                    <th>Ad</th>
                    <th>Konum Kodu</th>
                    <th style="width:220px;" class="text-end">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var s in Model)
                {
                    <tr>
                        <td>@s.Id</td>
                        <td>@s.Name</td>
                        <td>@s.LocationCode</td>
                        <td class="text-end">
                            <a class="btn btn-sm btn-outline-secondary me-1"
                               asp-area="DashBoard" asp-controller="Shelf" asp-action="Edit"
                               asp-route-id="@s.Id">Düzenle</a>

                            <a class="btn btn-sm btn-outline-danger"
                               asp-area="DashBoard" asp-controller="Shelf" asp-action="Delete"
                               asp-route-id="@s.Id">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
