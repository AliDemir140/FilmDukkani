@model List<Application.DTOs.MovieCopyDTOs.MovieCopyDto>
@{
    ViewData["Title"] = "Film Kopyaları";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="mb-0">Film Kopyaları</h3>

    <a class="btn btn-primary"
       asp-area="DashBoard" asp-controller="MovieCopy" asp-action="Create">
        Yeni Kopya Ekle
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@if (Model == null || !Model.Any())
{
    <div class="alert alert-warning">Henüz film kopyası yok.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead>
                <tr>
                    <th style="width:80px;">ID</th>
                    <th>Film</th>
                    <th>Raf</th>
                    <th>Barkod</th>
                    <th>Uygun</th>
                    <th>Hasarlı</th>
                    <th class="text-end" style="width:240px;">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var x in Model)
                {
                    <tr>
                        <td>@x.Id</td>
                        <td>@x.MovieTitle</td>
                        <td>@(x.ShelfName ?? "-")</td>
                        <td>@x.Barcode</td>
                        <td>@(x.IsAvailable ? "Evet" : "Hayır")</td>
                        <td>@(x.IsDamaged ? "Evet" : "Hayır")</td>
                        <td class="text-end">
                            <a class="btn btn-sm btn-outline-secondary me-1"
                               asp-area="DashBoard" asp-controller="MovieCopy" asp-action="Edit"
                               asp-route-id="@x.Id">Düzenle</a>

                            <a class="btn btn-sm btn-outline-danger"
                               asp-area="DashBoard" asp-controller="MovieCopy" asp-action="Delete"
                               asp-route-id="@x.Id">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
