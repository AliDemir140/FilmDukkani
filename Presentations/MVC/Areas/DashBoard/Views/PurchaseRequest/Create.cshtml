@using Application.DTOs.PurchaseRequestDTOs
@model CreatePurchaseRequestDto

@{
    ViewData["Title"] = "Satın Alma Talebi";
}

<h3>Satın Alma Talebi Oluştur</h3>

<form asp-area="DashBoard"
      asp-controller="PurchaseRequest"
      asp-action="Create"
      method="post"
      class="mt-3">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label class="form-label">Film</label>
        <select asp-for="MovieId" class="form-select" asp-items="ViewBag.Movies">
            <option value="">Seçiniz</option>
        </select>
        <span asp-validation-for="MovieId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Adet</label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Not</label>
        <textarea asp-for="Note" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Note" class="text-danger"></span>
    </div>

    <div class="d-flex gap-2">
        <button class="btn btn-primary" type="submit">Kaydet</button>
        <a class="btn btn-secondary"
           asp-area="DashBoard"
           asp-controller="PurchaseRequest"
           asp-action="Index">Geri</a>
    </div>
</form>

@section Scripts {
    <partial name="~/Views/Shared/_ValidationScriptsPartial.cshtml" />
}
