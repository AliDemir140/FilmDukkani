@model Application.DTOs.DeliveryRequestDTOs.DeliveryRequestDto

@{
    ViewData["Title"] = "İade Yönetimi";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h2 class="mb-0">İade Yönetimi</h2>
        <div class="text-muted">
            Sipariş #@Model.Id · @Model.MemberFullName · @Model.ListName · @Model.DeliveryDate.ToString("dd.MM.yyyy")
        </div>
    </div>

    <a asp-area="DashBoard" asp-controller="Returns" asp-action="Index" class="btn btn-outline-light">
        Geri
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="card dark-card">
    <div class="card-header">
        <b>Kalemler</b>
    </div>

    <div class="card-body p-0">
        <table class="table dark-table table-hover mb-0 align-middle">
            <thead>
                <tr>
                    <th>Film</th>
                    <th style="width:140px;">İade</th>
                    <th style="width:140px;">Hasarlı</th>
                    <th>Not</th>
                    <th class="text-center" style="width:140px;">Kaydet</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Items == null || !Model.Items.Any())
                {
                    <tr>
                        <td colspan="5" class="p-4">
                            Kalem bulunamadı.
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var it in Model.Items)
                    {
                        <tr>
                            <td>
                                <div class="fw-semibold">@it.MovieTitle</div>
                                <div class="text-muted">ItemId: @it.Id</div>
                            </td>

                            <td>
                                @if (it.IsReturned)
                                {
                                    <span class="badge bg-success">İade Edildi</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Bekliyor</span>
                                }
                            </td>

                            <td>
                                @if (it.IsDamaged)
                                {
                                    <span class="badge bg-danger">Hasarlı</span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>

                            <td style="min-width:240px;">
                                @if (it.IsReturned)
                                {
                                    <span class="text-muted">-</span>
                                }
                                else
                                {
                                    <form asp-area="DashBoard" asp-controller="Returns" asp-action="ReturnItem" method="post" class="d-flex gap-2">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="requestId" value="@Model.Id" />
                                        <input type="hidden" name="deliveryRequestItemId" value="@it.Id" />

                                        <select class="form-select form-select-sm" name="isDamaged">
                                            <option value="false">Hasarsız</option>
                                            <option value="true">Hasarlı</option>
                                        </select>

                                        <input class="form-control form-control-sm" name="note" maxlength="200" placeholder="Not (opsiyonel)" />
                                        <button type="submit" class="btn btn-sm btn-outline-success"
                                                onclick="return confirm('Bu kalem iade edilsin mi?');">
                                            Kaydet
                                        </button>
                                    </form>
                                }
                            </td>

                            <td class="text-center">
                                @if (it.IsReturned)
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
