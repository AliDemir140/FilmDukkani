@using Application.DTOs.MembershipPlanDTOs
@model UpdateMembershipPlanDto

@{
    ViewData["Title"] = "Üyelik Planı Sil";
}

<h3>Üyelik Planı Sil</h3>

<div class="alert alert-danger">
    <strong>@Model.PlanName</strong> planını silmek istediğine emin misin?
</div>

<form asp-area="DashBoard"
      asp-controller="MembershipPlan"
      asp-action="Delete"
      method="post">
    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-danger">Sil</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>
