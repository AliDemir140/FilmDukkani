@using Application.DTOs.MembershipPlanDTOs
@model List<MembershipPlanDto>

@{
    ViewData["Title"] = "Üyelik Planları";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3>Üyelik Planları</h3>

    <a class="btn btn-primary"
       asp-area="DashBoard"
       asp-controller="MembershipPlan"
       asp-action="Create">
        Yeni Plan Ekle
    </a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-warning">
        Henüz üyelik planı bulunmuyor.
    </div>
}
else
{
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>ID</th>
                <th>Plan Adı</th>
                <th>Fiyat</th>
                <th>Film Limiti</th>
                <th>Değişim Limiti</th>
                <th class="text-end">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.PlanName</td>
                    <td>@item.Price ₺</td>
                    <td>@item.MaxMoviesPerMonth</td>
                    <td>@item.MaxChangePerMonth</td>
                    <td class="text-end">
                        <a class="btn btn-sm btn-outline-secondary"
                           asp-area="DashBoard"
                           asp-controller="MembershipPlan"
                           asp-action="Edit"
                           asp-route-id="@item.Id">
                            Düzenle
                        </a>

                        <a class="btn btn-sm btn-outline-danger"
                           asp-area="DashBoard"
                           asp-controller="MembershipPlan"
                           asp-action="Delete"
                           asp-route-id="@item.Id">
                            Sil
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
