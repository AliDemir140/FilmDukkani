@using Application.DTOs.MembershipPlanDTOs
@model CreateMembershipPlanDto

@{
    ViewData["Title"] = "Yeni Üyelik Planı";
}

<h3>Yeni Üyelik Planı</h3>

<form asp-area="DashBoard" asp-controller="MembershipPlan" asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <div class="mb-3">
        <label class="form-label">Plan Adı</label>
        <input asp-for="PlanName" class="form-control" />
        <span asp-validation-for="PlanName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Fiyat</label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Aylık Film Limiti</label>
        <input asp-for="MaxMoviesPerMonth" class="form-control" />
        <span asp-validation-for="MaxMoviesPerMonth" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Aylık Değişim Limiti</label>
        <input asp-for="MaxChangePerMonth" class="form-control" />
        <span asp-validation-for="MaxChangePerMonth" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Açıklama</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
