@using Application.DTOs.MemberMovieListDTOs
@model CreateMemberMovieListDto

@{
    ViewData["Title"] = "Yeni Liste";
}

<h3>Yeni Liste Oluştur</h3>

<form asp-action="Create" method="post" class="mt-3">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label class="form-label">Üye</label>
        <select asp-for="MemberId" class="form-select" asp-items="ViewBag.Members">
            <option value="">Seçiniz</option>
        </select>
        <span asp-validation-for="MemberId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Liste Adı</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">Kaydet</button>
        <a class="btn btn-secondary" asp-action="Index" asp-route-memberId="@Model.MemberId">Geri</a>
    </div>
</form>

@section Scripts {
    <partial name="~/Views/Shared/_ValidationScriptsPartial.cshtml" />
}
