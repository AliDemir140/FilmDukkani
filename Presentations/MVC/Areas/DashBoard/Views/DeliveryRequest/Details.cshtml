@using Domain.Enums
@using Application.DTOs.DeliveryRequestDTOs
@using Microsoft.AspNetCore.Mvc.Rendering
@model DeliveryRequestDto

@{
    ViewData["Title"] = "Teslimat Detay";
    var couriers = ViewBag.Couriers as List<SelectListItem> ?? new List<SelectListItem>();
}

<h2>Teslimat Detay</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="mb-3">
    <div><b>ID:</b> @Model.Id</div>
    <div><b>Üye:</b> @Model.MemberFullName</div>
    <div><b>Liste:</b> @Model.ListName</div>
    <div><b>İstek Tarihi:</b> @Model.RequestedDate.ToString("dd.MM.yyyy HH:mm")</div>
    <div><b>Teslimat Tarihi:</b> @Model.DeliveryDate.ToString("dd.MM.yyyy")</div>
    <div><b>Durum:</b> @Model.Status</div>

    @if (!string.IsNullOrWhiteSpace(Model.CourierFullName))
    {
        <div><b>Kurye:</b> @Model.CourierFullName</div>
    }

    @if (Model.Status == DeliveryStatus.CancelRequested)
    {
        <div class="card dark-card mt-2">
            <div class="card-body">
                <div class="mb-1">
                    <b>İptal Talebi:</b> Admin onayı bekliyor.
                </div>

                @if (!string.IsNullOrWhiteSpace(Model.CancelReason))
                {
                    <div class="mb-1"><b>Sebep:</b> @Model.CancelReason</div>
                }

                @if (Model.CancelRequestedAt.HasValue)
                {
                    <div class="text-muted">
                        <b>Talep Tarihi:</b> @Model.CancelRequestedAt.Value.ToString("dd.MM.yyyy HH:mm")
                    </div>
                }
            </div>
        </div>
    }
</div>

@if (Model.Status == DeliveryStatus.Prepared || Model.Status == DeliveryStatus.Shipped)
{
    <div class="card mb-3 dark-card">
        <div class="card-body">
            <form asp-action="AssignCourier" method="post" class="row g-2 align-items-end">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@Model.Id" />

                <div class="col-12 col-md-6">
                    <label class="form-label">Kurye</label>
                    <select class="form-select" name="courierId" required>
                        <option value="">Seç</option>

                        @foreach (var c in couriers)
                        {
                            if (c.Selected)
                            {
                                <option value="@c.Value" selected="selected">@c.Text</option>
                            }
                            else
                            {
                                <option value="@c.Value">@c.Text</option>
                            }
                        }
                    </select>
                </div>

                <div class="col-12 col-md-3">
                    <button type="submit" class="btn btn-primary w-100">Kurye Ata</button>
                </div>
            </form>
        </div>
    </div>
}

<div class="mb-3 d-flex gap-2 flex-wrap">
    <a class="btn btn-outline-primary"
       target="_blank"
       asp-action="Label"
       asp-route-id="@Model.Id">
        Teslimat Etiketi
    </a>

    @if (Model.Status == DeliveryStatus.CancelRequested)
    {
        <form asp-action="ApproveCancel" method="post"
              onsubmit="return confirm('İptal talebini onaylıyor musun? Sipariş iptal edilecek ve varsa ayrılan kopyalar geri açılacak.');">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-danger">İptali Onayla</button>
        </form>

        <form asp-action="RejectCancel" method="post"
              onsubmit="return confirm('İptal talebini reddediyor musun? Sipariş önceki durumuna geri dönecek.');">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-outline-secondary">İptali Reddet</button>
        </form>
    }

    @if (Model.Status == DeliveryStatus.Pending || Model.Status == DeliveryStatus.Prepared)
    {
        <form asp-action="Cancel" method="post"
              onsubmit="return confirm('Bu siparişi admin olarak direkt iptal etmek istiyor musun?');">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-danger">İptal</button>
        </form>
    }

    @if (Model.Status == DeliveryStatus.Prepared)
    {
        <form asp-action="MarkShipped" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-warning">Kurye Çıktı</button>
        </form>
    }

    @if (Model.Status == DeliveryStatus.Shipped)
    {
        <form asp-action="MarkDelivered" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-success">Teslim Edildi</button>
        </form>
    }

    @if (Model.Status == DeliveryStatus.Delivered)
    {
        <form asp-action="MarkCompleted" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-primary">Süreci Bitir</button>
        </form>
    }

    <a class="btn btn-secondary" asp-action="Index">Geri</a>
</div>

<h4>Kalemler</h4>

<table class="table table-bordered dark-table">
    <thead>
        <tr>
            <th>Film</th>
            <th>İade</th>
            <th>Hasar</th>
            <th>İade Tarihi</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Items != null && Model.Items.Any())
        {
            foreach (var it in Model.Items)
            {
                <tr>
                    <td>@it.MovieTitle</td>
                    <td>@(it.IsReturned ? "Evet" : "Hayır")</td>
                    <td>@(it.IsDamaged ? "Evet" : "Hayır")</td>
                    <td>@(it.ReturnDate.HasValue? it.ReturnDate.Value.ToString("dd.MM.yyyy HH:mm") : "-")</td>
                    <td>
                        @if (!it.IsReturned)
                        {
                            <form asp-action="ReturnItem" method="post" class="d-flex gap-2 align-items-center flex-wrap">
                                @Html.AntiForgeryToken()

                                <input type="hidden" name="requestId" value="@Model.Id" />
                                <input type="hidden" name="DeliveryRequestItemId" value="@it.Id" />

                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="IsDamaged" value="true" id="dmg_@it.Id" />
                                    <label class="form-check-label" for="dmg_@it.Id">Hasarlı</label>
                                </div>

                                <input class="form-control form-control-sm" type="text" name="Note" placeholder="Not (opsiyonel)" style="max-width:240px;" />

                                <button type="submit" class="btn btn-sm btn-primary">İade Al</button>
                            </form>
                        }
                        else
                        {
                            <span>-</span>
                        }
                    </td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="5">Kalem bulunamadı.</td></tr>
        }
    </tbody>
</table>
