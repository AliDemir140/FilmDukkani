@using Domain.Enums
@model DeliveryRequestDto

@{
    ViewData["Title"] = "Teslimat Detay";
}

<h2>Teslimat Detay</h2>

<div class="mb-3">
    <div><b>ID:</b> @Model.Id</div>
    <div><b>Üye:</b> @Model.MemberFullName</div>
    <div><b>Liste:</b> @Model.ListName</div>
    <div><b>İstek Tarihi:</b> @Model.RequestedDate.ToString("dd.MM.yyyy HH:mm")</div>
    <div><b>Teslimat Tarihi:</b> @Model.DeliveryDate.ToString("dd.MM.yyyy")</div>
    <div><b>Durum:</b> @Model.Status</div>
</div>

<div class="mb-3 d-flex gap-2 flex-wrap">
    @if (Model.Status == DeliveryStatus.Pending || Model.Status == DeliveryStatus.Prepared)
    {
        <form asp-action="Cancel" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-danger">İptal</button>
        </form>
    }

    @if (Model.Status == DeliveryStatus.Prepared)
    {
        <form asp-action="MarkDelivered" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-success">Teslim Edildi</button>
        </form>
    }

    <a class="btn btn-secondary" asp-action="Index">Geri</a>
</div>

<h4>Kalemler</h4>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Film</th>
            <th>İade</th>
            <th>Hasar</th>
            <th>İade Tarihi</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Items != null && Model.Items.Any())
        {
            foreach (var it in Model.Items)
            {
                <tr>
                    <td>@it.MovieTitle</td>
                    <td>@(it.IsReturned ? "Evet" : "Hayır")</td>
                    <td>@(it.IsDamaged ? "Evet" : "Hayır")</td>
                    <td>@(it.ReturnDate.HasValue? it.ReturnDate.Value.ToString("dd.MM.yyyy HH:mm") : "-")</td>
                    <td>
                        @if (!it.IsReturned)
                        {
                            <form asp-action="ReturnItem" method="post" class="d-flex gap-2 align-items-center flex-wrap">
                                @Html.AntiForgeryToken()

                                <input type="hidden" name="requestId" value="@Model.Id" />
                                <input type="hidden" name="DeliveryRequestItemId" value="@it.Id" />

                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="IsDamaged" value="true" id="dmg_@it.Id" />
                                    <label class="form-check-label" for="dmg_@it.Id">Hasarlı</label>
                                </div>

                                <input class="form-control form-control-sm" type="text" name="Note" placeholder="Not (opsiyonel)" style="max-width:240px;" />

                                <button type="submit" class="btn btn-sm btn-primary">İade Al</button>
                            </form>
                        }
                        else
                        {
                            <span>-</span>
                        }
                    </td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="5">Kalem bulunamadı.</td></tr>
        }
    </tbody>
</table>
