@using Application.DTOs.MovieDTOs
@model CreateMovieDto

@{
    ViewData["Title"] = "Yeni Film Ekle";
}

<h3>Yeni Film Ekle</h3>

<form asp-action="Create" method="post" class="mt-3">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label class="form-label">Film Adı</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="row g-3">
        <div class="col-12 col-md-6">
            <label class="form-label">Yapım Yılı</label>
            <input asp-for="ReleaseYear" class="form-control" />
            <span asp-validation-for="ReleaseYear" class="text-danger"></span>
        </div>

        <div class="col-12 col-md-6">
            <label class="form-label">Kategoriler</label>
            <select asp-for="CategoryIds" class="form-select" asp-items="ViewBag.Categories" multiple></select>
            <span asp-validation-for="CategoryIds" class="text-danger"></span>
        </div>
    </div>

    <div class="row g-3 mt-1">
        <div class="col-12 col-md-6">
            <label class="form-label">Oyuncular</label>
            <select asp-for="ActorIds" class="form-select" asp-items="ViewBag.Actors" multiple></select>

            <div class="mt-2">
                <label class="form-label">Yeni Oyuncular</label>
                <input asp-for="NewActors" class="form-control" placeholder="Virgülle ayır: Brad Pitt, Tom Hanks" />
                <span asp-validation-for="NewActors" class="text-danger"></span>
            </div>
        </div>

        <div class="col-12 col-md-6">
            <label class="form-label">Yönetmenler</label>
            <select asp-for="DirectorIds" class="form-select" asp-items="ViewBag.Directors" multiple></select>

            <div class="mt-2">
                <label class="form-label">Yeni Yönetmenler</label>
                <input asp-for="NewDirectors" class="form-control" placeholder="Virgülle ayır: Christopher Nolan, David Fincher" />
                <span asp-validation-for="NewDirectors" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row g-3 mt-1">
        <div class="col-12 col-md-4">
            <div class="form-check mt-4">
                <input class="form-check-input" asp-for="IsEditorsChoice" />
                <label class="form-check-label" asp-for="IsEditorsChoice">Editör Seçimi</label>
            </div>
        </div>

        <div class="col-12 col-md-4">
            <div class="form-check mt-4">
                <input class="form-check-input" asp-for="IsNewRelease" />
                <label class="form-check-label" asp-for="IsNewRelease">Yeni Çıkan</label>
            </div>
        </div>

        <div class="col-12 col-md-4">
            <div class="form-check mt-4">
                <input class="form-check-input" asp-for="IsAwardWinner" />
                <label class="form-check-label" asp-for="IsAwardWinner">Ödüllü Film</label>
            </div>
        </div>
    </div>

    <div class="row g-3 mt-3">
        <div class="col-12 col-md-6">
            <label class="form-label">Kapak Resmi URL</label>
            <input asp-for="CoverImageUrl" class="form-control" />
            <span asp-validation-for="CoverImageUrl" class="text-danger"></span>
        </div>

        <div class="col-12 col-md-6">
            <label class="form-label">Fragman URL</label>
            <input asp-for="TrailerUrl" class="form-control" />
            <span asp-validation-for="TrailerUrl" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3 mt-3">
        <label class="form-label">Açıklama</label>
        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">Kaydet</button>
        <a class="btn btn-secondary" asp-action="Index">Geri</a>
    </div>
</form>

@section Scripts {
    <partial name="~/Views/Shared/_ValidationScriptsPartial.cshtml" />
}
