@using Application.DTOs.MovieDTOs
@model UpdateMovieDto

@{
    ViewData["Title"] = "Film Sil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12 col-md-3 mb-3">
        @await Html.PartialAsync("_DashBoardSidebar")
    </div>

    <div class="col-12 col-md-9">
        <h3>Film Sil</h3>

        <div class="alert alert-warning">
            <strong>@Model.Title</strong> filmi silinsin mi?
        </div>

        <form asp-area="DashBoard" asp-controller="Movie" asp-action="Delete" method="post">
            @Html.AntiForgeryToken()

            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Title" />
            <input type="hidden" asp-for="Description" />
            <input type="hidden" asp-for="ReleaseYear" />
            <input type="hidden" asp-for="CategoryId" />

            <button class="btn btn-danger" type="submit">Evet, Sil</button>
            <a class="btn btn-secondary" asp-area="DashBoard" asp-controller="Movie" asp-action="Index">Vazgeç</a>
        </form>
    </div>
</div>
