@using Application.DTOs.CategoryDTOs
@model UpdateCategoryDto

@{
    ViewData["Title"] = "Kategori Sil";
}

<h3 class="mb-3 text-danger">Kategori Sil</h3>

<div class="alert alert-warning">
    <strong>Dikkat!</strong> Bu kategoriyi silmek üzeresiniz.
</div>

<form asp-area="DashBoard"
      asp-controller="Category"
      asp-action="Delete"
      method="post"
      class="card p-4">

    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label class="form-label">Kategori Adı</label>
        <input class="form-control" value="@Model.CategoryName" disabled />
    </div>

    <div class="d-flex justify-content-between">
        <a class="btn btn-secondary"
           asp-area="DashBoard"
           asp-controller="Category"
           asp-action="Index">
            Vazgeç
        </a>

        <button type="submit" class="btn btn-danger">
            Sil
        </button>
    </div>
</form>
